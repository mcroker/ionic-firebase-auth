{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "declaration": true,
    "inlineSources": true,
    "lib": [
      "dom",
      "es2018"
    ],
  },
  "files": [
    "src/public-api.ts",
  ],
  "exclude": [
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": false,
    "enableResourceInlining": true,
    "strictInjectionParameters": true,
    "fullTemplateTypeCheck": true,
    "enableIvy": false
  }
}